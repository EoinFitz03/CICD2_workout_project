APP_ENV=docker

POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=appdb

# Use Postgres workout_db in Docker
DATABASE_URL=postgresql+psycopg://app:app@workout_db:5432/appdb

SQL_ECHO=false
DB_RETRIES=10
DB_RETRY_DELAY=1.5

# NEW: where to reach other services in docker-compose
USER_SERVICE_BASE_URL=http://user_service:8000
GOALS_SERVICE_BASE_URL=http://goals_service:8000

# NEW: sync-call timeout to users service
USER_SERVICE_TIMEOUT=2.0

# NEW: circuit breaker controls
USER_CB_FAIL_MAX=3
USER_CB_RESET_TIMEOUT=30
